#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <windows.h>

#define MAX_PROBABILITY 100.0f              // 성공확률 최대치
 
int main() {
	
    int isTry = 0;                         
    int level = 0;                          
    float probability = MAX_PROBABILITY;    // 현재 강화 성공확률
    int randNum = 0;                        // 랜덤값을 저장할 변수
 
    srand((int)time(NULL));                 // 랜덤 시드값 설정
 
    while (1) {
		
		system("cls");
		
		printf("무기강화 게임\n\n");
        printf("무기레벨: %d\n", level);
        printf("성공확률: %.2f%%\n", probability);
        printf("강화하시겠습니까?\n");
        printf("1.네   2.아니요\n");
        scanf("%d", &isTry);
 
        switch (isTry) {
        	
        case 1: 
        
            randNum = rand() % 100;

            if (randNum < probability) {
            	
                level++; 
                probability -= (probability / 35.0f) * level; 
            }
            else {
            	
                level = 0;
                probability = MAX_PROBABILITY;
            }
            break;
 
        case 2:
  
            printf("게임 끝\n");
            return -1;
        }
 
    }
 
    return 0;
}
